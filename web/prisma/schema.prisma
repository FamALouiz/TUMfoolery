// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication and profile
model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  password      String         // hashed password
  image         String?
  walletAddress String?        // connected crypto wallet address
  walletType    String?        // wallet type (e.g., MetaMask, WalletConnect, Coinbase)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  chatHistories ChatHistory[]
  bets          Bet[]
  
  @@map("users")
}

// Chat history per match per user
model ChatHistory {
  id                String        @id @default(cuid())
  userId            String
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  marketKey         String        // unique identifier for the match (team1-team2-description)
  team1             String
  team2             String
  marketDescription String
  enabledSources    String[]      // array of enabled source IDs
  messages          ChatMessage[]
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  @@unique([userId, marketKey])
  @@index([userId])
  @@map("chat_histories")
}

// Individual chat messages
model ChatMessage {
  id            String      @id @default(cuid())
  chatHistoryId String
  chatHistory   ChatHistory @relation(fields: [chatHistoryId], references: [id], onDelete: Cascade)
  role          String      // "user" or "assistant"
  content       String      @db.Text
  sources       String[]    // array of source names
  timestamp     DateTime    @default(now())
  
  @@index([chatHistoryId])
  @@map("chat_messages")
}

// Betting model for tracking user bets
model Bet {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  team1             String
  team2             String
  marketDescription String
  platform          String   // "Kalshi" or "Manifold"
  betAmount         Float    // amount bet
  odds              Float    // odds at time of bet
  predictedOutcome  String   // what the user bet on
  actualOutcome     String?  // actual result (null if pending)
  profitLoss        Float?   // profit or loss (null if pending)
  status            String   @default("pending") // "pending", "won", "lost"
  walletAddress     String   // wallet used for this bet
  aiSummary         String?  @db.Text // AI-generated summary of what went wrong/right
  createdAt         DateTime @default(now())
  settledAt         DateTime? // when the bet was settled
  
  @@index([userId])
  @@index([status])
  @@map("bets")
}
